{% extends "layout.njk" %}

{% block content %}

  <div class="card table-container">
    <div class="header">
      <a class="button" href="/teachers/create"> Novo </a>

      <form action="/teachers" method="GET">
        <input type="text" name="filter" placeholder="Nome ou Aula" value="{{ filter }}">
        <button type="submit"> Filtrar </button>
      </form>
    </div>

    <table>
      <thead>
        <tr>
          <th> Professor(a) </th>
          <th colspan="3"> Aula(s) </th>
          <th> Detalhes </th>
        </tr>
      </thead>
      <tbody>
        {% for teacher in teachers %}
          <tr>
            <td>
              <span style="background-image: url({{teacher.avatar_url}})"></span>
              {{teacher.name}}
            </td>
            {% for subject_taught in teacher.subjects_taught %}
              <td class="subjects_taught">
                <span> {{subject_taught}} </span>
              </td>
            {% endfor %}
            <td>
              <a href="/teachers/{{ teacher.id }}"> Ver </a>
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>

{% endblock content %}