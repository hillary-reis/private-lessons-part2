<div class="item">
  <div>
    Avatar URL
  </div>
  <div>
    <input type="url" name="avatar_url" placeholder="http://" value="{{ student.avatar_url }}">
  </div>
</div>

<div class="item">
  <div>
    Aluno(a)
  </div>
  <div>
    <input type="text" name="name" placeholder="Nome do(a) aluno(a)" value="{{ student.name }}">
  </div>
</div>

<div class="item">
  <div>
    Email
  </div>
  <div>
    <input type="email" name="email" placeholder="email@gmail.com" value="{{ student.email }}">
  </div>
</div>

<div class="item">
  <div>
    Data de Nascimento
  </div>
  <div>
    <input type="date" name="birth_date" value="{{ student.birth_date }}">
  </div>
</div>

<div class="item">
  <div>
    Ano Escolar
  </div>
  <div>
    <select name="school_year">
      <option value="5EF" {% if student.school_year == "5EF" %} selected="selected" {% endif %}>
        5° ano do Ensino Fundamental
      </option>
      <option value="6EF" {% if student.school_year == "6EF" %} selected="selected" {% endif %}>
        6° ano do Ensino Fundamental
      </option>
      <option value="7EF" {% if student.school_year == "7EF" %} selected="selected" {% endif %}>
        7° ano do Ensino Fundamental
      </option>
      <option value="8EF" {% if student.school_year == "8EF" %} selected="selected" {% endif %}>
        8° ano do Ensino Fundamental
      </option>
      <option value="9EF" {% if student.school_year == "9EF" %} selected="selected" {% endif %}>
        9° ano do Ensino Fundamental
      </option>
      <option value="1EM" {% if student.school_year == "1EM" %} selected="selected" {% endif %}>
        1° ano do Ensino Médio
      </option>
      <option value="2EM" {% if student.school_year == "2EM" %} selected="selected" {% endif %}>
        2° ano do Ensino Médio
      </option>
      <option value="3EM" {% if student.school_year == "3EM" %} selected="selected" {% endif %}>
        3° ano do Ensino Médio
      </option>
    </select>
  </div>
</div>

<div class="item">
  <div>
    Carga Horária Semanal
  </div>
  <div>
    <input type="number" name="weekly_workload" placeholder="quantidade de horas de aulas por semana" value="{{ student.weekly_workload }}">
  </div>
</div>